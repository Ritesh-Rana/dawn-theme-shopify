<div class="video-container">
  <div class="desktop-video" id="video-section"></div>
</div>

<script>
  function checkDevice() {

// Check the screen width to determine the device type
    var screenWidth = screen.width;
    if (screenWidth <= 800) { // Display mobile video
      $("#video-section").html('<iframe width="560" height="315" src="https://www.youtube.com/embed/27UGBp5qkZY?playlist=27UGBp5qkZY&loop=1&autoplay=1&controls=1&showinfo=0&mute=1" frameborder="0" allowfullscreen></iframe>');
    } else { // Display desktop video
      $("#video-section").html('<iframe width="560" height="315" src="https://www.youtube.com/embed/QTtXmARDG-Y?playlist=QTtXmARDG-Y&loop=1&autoplay=1&controls=1&showinfo=0&mute=1" frameborder="0" allowfullscreen></iframe>');
    }
  }

  $(document).ready(function() {
    checkDevice();
  });

  $(window).resize(function() {
    checkDevice();
  });
</script>
<style>
  /* Style the video container */
  .video-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Style the video player */
  video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
